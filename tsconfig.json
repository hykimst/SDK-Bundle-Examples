{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es6",
    "noImplicitReturns": true,
    "noEmitOnError": true,
    "noUnusedLocals": false,
    "esModuleInterop": true,
    "lib": ["es2017", "dom"]
  },
  "include": ["src",
  "src/**/*.ts", "utils/logger.ts"]
}